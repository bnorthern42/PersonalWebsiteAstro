---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import SkillPills from "../components/SkillPills.astro";
import ProjectsGrid from "../components/ProjectsGrid.astro";
import Section from "../components/Section.astro";
import ResearchProfiles from "../components/ResearchProfiles.astro";
import Education from "../components/Education.astro";

import Experience from "../components/Experience.astro";
---
<Base title="Brad Northern — Portfolio">
  <Hero />

  <Section id="about" kicker="About" title="Curiosity + throughput">
    <div class="prose prose-invert max-w-none">
      <p>
        I’m a systems-minded engineer who cares about correctness and latency in equal measure.
        Background across HPC, backend, and a bit of game tech. Current obsessions: better meshes, better logs, better knobs.
      </p>
    </div>
  </Section>

  <SkillPills />
  <ProjectsGrid />
  <Education/>
  <Section id="publications" kicker="Scholar" title="Select Publications">
    <!-- your list -->
    <ResearchProfiles />
    <Experience/>
  </Section>
  <Section id="contact" kicker="Let’s talk" title="Contact me">
    <div class="grid md:grid-cols-2 gap-6">
      <a href="mailto:bradn4@gmail.com" class="card p-5 hover:border-white/20">
        <h3 class="font-semibold">Email</h3>
        <p class="text-zinc-300">bradn4@gmail.com</p>
      </a>
      <a href="https://www.linkedin.com/in/brad-northern/" class="card p-5 hover:border-white/20">
        <h3 class="font-semibold">LinkedIn</h3>
        <p class="text-zinc-300">brad-northern</p>
      </a>
      <a href="https://x.com/ZeroDarkDev" class="card p-5 hover:border-white/20">
        <h3 class="font-semibold">X (Twitter)</h3>
        <p class="text-zinc-300">@ZeroDarkDev</p>
      </a>
    </div>
  </Section>
</Base>
