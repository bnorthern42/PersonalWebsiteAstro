---
const { title, description, link, date } = Astro.props;
---
<div class="group relative">
  <div class="hidden sm:flex flex-col items-center">
    <div class="w-16 h-16 rounded-full bg-gradient-to-br from-accent to-accent/50 text-background flex items-center justify-center z-10 ring-8 ring-background shadow-lg shadow-accent/20 transition-all duration-300 group-hover:scale-110">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-award w-7 h-7">
        <path d="M8 21v-5.14a4 4 0 1 1 8 0V21"/>
        <circle cx="12" cy="12" r="4"/>
        <path d="M12 21H5l-2-3h18l-2 3H12z"/>
      </svg>
    </div>
  </div>
  <div class="relative backdrop-blur-md bg-background/30 border border-accent/10 rounded-2xl p-6 sm:p-8 shadow-xl transition-all duration-300 group-hover:shadow-accent/5 group-hover:border-accent/20 group-hover:translate-x-1">
    <div class="absolute -top-2 -right-2 w-6 h-6 rounded-full bg-accent blur-sm opacity-50"></div>
    <div class="flex flex-wrap justify-between items-start gap-3 mb-6">
      <div>
        <h3 class="text-2xl font-bold">{title}</h3>
        <p class="text-primary font-medium">Assignee: Tennessee Technological University</p>
      </div>
      <span class="hidden sm:flex items-center px-4 py-1 bg-background/50 backdrop-blur-sm border border-accent/20 rounded-full text-sm shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar w-4 h-4 mr-2 text-accent">
          <path d="M8 2v4"/>
          <path d="M16 2v4"/>
          <rect width="18" height="18" x="3" y="4" rx="2"/>
          <path d="M3 10h18"/>
        </svg>
        Filed: Jan 3, 2023 | Published: Jul 4, 2024
      </span>
    </div>
    <p class="font-medium text-muted-foreground mb-4">Cyber Risk Assessment Patent</p>
    <p class="text-foreground/80 mb-6">{description}</p>
    <div class="flex flex-wrap gap-2 mt-4">
      <span class="px-3 py-1 text-sm font-bold rounded-full bg-primary/10 text-primary border border-primary/20 backdrop-blur-sm">Cybersecurity</span>
      <span class="px-3 py-1 text-sm font-bold rounded-full bg-primary/10 text-primary border border-primary/20 backdrop-blur-sm">Risk Scoring</span>
      <span class="px-3 py-1 text-sm font-bold rounded-full bg-primary/10 text-primary border border-primary/20 backdrop-blur-sm">Sensitivity Analysis</span>
      <span class="px-3 py-1 text-sm font-bold rounded-full bg-primary/10 text-primary border border-primary/20 backdrop-blur-sm">Defensive Actions</span>
    </div>
    <a href={link} target="_blank" class="mt-4 inline-block px-4 py-2 bg-accent/10 text-accent rounded-full hover:bg-accent/20 transition-all duration-300">
      View Patent
    </a>
  </div>
</div>