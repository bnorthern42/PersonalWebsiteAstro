---
const { title, description, link, date, tags = [] } = Astro.props;
---
<article class="rounded-2xl border border-white/10 bg-[#10131a]/90 p-5 hover:-translate-y-0.5 hover:border-accent-400/50 transition">
    <header class="flex items-start justify-between gap-3">
        <h3 class="text-lg font-semibold">{title}</h3>
        {date && <time class="text-sm text-zinc-400">{date}</time>}
    </header>

    <p class="mt-1 text-sm text-zinc-300">{description}</p>

    {tags.length > 0 && (
            <div class="mt-3 flex flex-wrap gap-2">
                {tags.map((t) => (
                        <span class="px-2 py-0.5 rounded-md bg-accent-500/10 text-accent-300 text-xs border border-accent-500/20">
          {t}
        </span>
                ))}
            </div>
    )}

    {link && (
            <a href={link} target="_blank" rel="noopener noreferrer"
               class="mt-3 inline-block text-sm underline hover:no-underline">
                View Patent
            </a>
    )}
</article>
