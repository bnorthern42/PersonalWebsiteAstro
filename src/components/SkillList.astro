---
import skillsData from '../data/skills.json';
---
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 animate-slide-in">
  {skillsData.map(category => category.skills.map(skill => (
    <div class="card text-center">
      <img src={skill.icon} alt={skill.name} class="w-16 h-16 mx-auto mb-4" />
      <h3 class="text-xl mb-2">{skill.name}</h3>
      <p class="text-secondary">{skill.description}</p>
    </div>
  )))}
</div>