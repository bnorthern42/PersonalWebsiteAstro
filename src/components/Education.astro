---
import education from "../data/education";
---

<section id="education" class="section scroll-mt-24">
    <div class="container">
        <p class="text-sm uppercase tracking-wide font-medium text-accent-300/90">Education</p>
        <h2 class="heading-grad text-2xl md:text-3xl font-bold mt-2">Academic Background</h2>

        <ol class="mt-6 relative before:content-[''] before:absolute before:left-4 md:before:left-5 before:top-0 before:bottom-0 before:w-px before:bg-white/10">
            {education.map((ed) => (
                    <li class="relative pl-10 md:pl-14 mb-6 last:mb-0">
                        <span class="absolute left-[0.55rem] md:left-[1.15rem] top-2 size-2.5 rounded-full bg-accent-500 ring-4 ring-accent-500/20" />

                        <article class="rounded-2xl border border-white/10 bg-[#10131a]/90 p-4 md:p-5 hover:-translate-y-0.5 hover:border-accent-400/50 transition">
                            <h3 class="text-lg font-semibold text-white">
                                {ed.degree}
                                {ed.status && <span class="text-zinc-400"> {ed.status}</span>}
                                {ed.year && <span class="text-zinc-400"> ({ed.year})</span>}
                            </h3>
                            <p class="mt-1 text-sm text-zinc-300">{ed.school} â€” {ed.summary}</p>

                            {ed.highlights && ed.highlights.length > 0 && (
                                    <ul class="mt-2 space-y-1.5">
                                        {ed.highlights.map((h) => (
                                                <li class="pl-5 relative text-sm text-zinc-300">
                                                    <span class="absolute left-0 top-1.5 size-1.5 rounded-full bg-accent-500/70" />
                                                    {h}
                                                </li>
                                        ))}
                                    </ul>
                            )}
                        </article>
                    </li>
            ))}
        </ol>
    </div>
</section>
