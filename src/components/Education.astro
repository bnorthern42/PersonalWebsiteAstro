---
import education from "../data/education";
---

<section id="education" class="py-12 md:py-16">
    <p class="section-kicker">Education</p>
    <h2 class="section-title mt-2">Academic Background</h2>
    <div class="mt-6 space-y-8">
        {education.map((ed) => (
                <div>
                    <h3 class="text-xl font-bold text-white">
                        {ed.degree}
                        {ed.status && <span class="text-zinc-400"> {ed.status}</span>}
                        {ed.year && <span class="text-zinc-400"> ({ed.year})</span>}
                    </h3>
                    <ul class="mt-2 list-disc list-inside text-zinc-300 space-y-1">
                        <li>{ed.school} â€” {ed.summary}</li>
                        {ed.highlights.map((h) => <li>{h}</li>)}
                    </ul>
                </div>
        ))}
    </div>
</section>
