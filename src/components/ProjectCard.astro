---
interface Props {
    title: string;
    description: string;
    img?: string;
    href?: string;
    tags?: string[];
}
const { title, description, img = "", href = "#", tags = [] } = Astro.props;
---
<article
        class="rounded-2xl border border-white/10 bg-[#10131a]/90 overflow-hidden transition
         hover:-translate-y-1 hover:shadow-[0_20px_50px_rgba(0,0,0,.35)] hover:border-accent-400/50"
>
    <a href={href} class="block focus:outline-none focus-visible:ring-2 focus-visible:ring-accent-400/70">
        {img && (
                <img src={img} alt={`${title} preview`} loading="lazy" class="w-full aspect-video object-cover border-b border-white/5" />
        )}
        <div class="p-4">
            <h3 class="text-lg font-semibold">{title}</h3>
            <p class="mt-1 text-sm text-zinc-300">{description}</p>
            {tags.length > 0 && (
                    <div class="mt-3 flex flex-wrap gap-2">
                        {tags.map((t) => (
                                <span class="px-2 py-0.5 rounded-md bg-accent-500/10 text-accent-300 text-xs border border-accent-500/20">{t}</span>
                        ))}
                    </div>
            )}
        </div>
    </a>
</article>
