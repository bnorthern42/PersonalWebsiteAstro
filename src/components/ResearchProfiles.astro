---
import { profiles, patents } from "../data/research";

// Try SSR fetch first (works in build and in dev when the URL is absolute)
let pubs: Array<any> = [];
try {
    const apiUrl = new URL("/api/pubs.json", Astro.request.url);
    const res = await fetch(apiUrl.toString(), { cache: "no-store" });
    if (res.ok) pubs = await res.json();
} catch {
    pubs = [];
}

// Group pubs by year (desc)
const byYear: Record<string, any[]> = {};
for (const p of pubs) {
    const y = String(p?.year ?? "Other");
    (byYear[y] ||= []).push(p);
}
const years = Object.keys(byYear).sort((a, b) => Number(b) - Number(a));
---

<section id="research" class="section scroll-mt-24">
    <div class="container">
        <p class="text-sm uppercase tracking-wide font-medium text-accent-300/90">Research</p>
        <h2 class="heading-grad text-2xl md:text-3xl font-bold mt-2">Publications, Patents & Profiles</h2>

        <!-- Publications -->
        <div class="mt-6">
            <h3 class="text-lg font-semibold">Publications</h3>

            <!-- SSR block (will be replaced by client script if empty) -->
            <div id="pubs-root" data-ssr-count={pubs.length}>
                {pubs.length === 0 ? (
                        <p class="mt-3 text-sm text-zinc-400">
                            No publications found yet. Trying live fetch…
                        </p>
                ) : (
                        <div class="mt-4 space-y-6">
                            {years.map((y) => (
                                    <div key={y}>
                                        <div class="text-sm text-zinc-400 mb-2">{y}</div>
                                        <ul class="space-y-3">
                                            {byYear[y].map((p) => (
                                                    <li
                                                            key={p.id || p.doi || p.title}
                                                            class="rounded-xl border border-white/10 bg-[#10131a]/90 p-4 hover:border-accent-400/50 transition"
                                                    >
                                                        <div class="flex flex-wrap items-baseline gap-2">
                                                            <h4 class="font-medium">{p.title}</h4>
                                                            {p.year && <span class="text-xs text-zinc-500">({p.year})</span>}
                                                        </div>

                                                        {(p.authors?.length || p.venue) && (
                                                                <p class="text-sm text-zinc-300 mt-1">
                                                                    {p.authors?.join(", ")}{p.venue ? ` — ${p.venue}` : ""}
                                                                </p>
                                                        )}

                                                        <div class="mt-2 flex flex-wrap gap-3 text-sm">
                                                            {p.doi && (
                                                                    <a
                                                                            class="underline hover:no-underline"
                                                                            href={`https://doi.org/${p.doi}`}
                                                                            target="_blank"
                                                                            rel="noopener noreferrer"
                                                                    >
                                                                        DOI
                                                                    </a>
                                                            )}
                                                            {p.url && (
                                                                    <a
                                                                            class="underline hover:no-underline"
                                                                            href={p.url}
                                                                            target="_blank"
                                                                            rel="noopener noreferrer"
                                                                    >
                                                                        Link
                                                                    </a>
                                                            )}
                                                            {p.type && (
                                                                    <span class="px-2 py-0.5 rounded-md bg-accent-500/10 text-accent-300 text-xs border border-accent-500/20">
                            {p.type}
                          </span>
                                                            )}
                                                        </div>
                                                    </li>
                                                ))}
                                                </ul>
                                                </div>
                                                ))}
                                    </div>
                                )}
                                </div>
                                </div>

                                <!-- Patents -->
                            {patents?.length > 0 && (
                                    <div class="mt-10">
                                        <h3 class="text-lg font-semibold">Patents</h3>
                                        <ul class="mt-4 space-y-3">
                                            {patents.map((patent) => (
                                                    <li
                                                            class="rounded-xl border border-white/10 bg-[#10131a]/90 p-4 hover:border-accent-400/50 transition"
                                                            key={patent.link || patent.title}
                                                    >
                                                        {patent.link ? (
                                                                <a
                                                                        href={patent.link}
                                                                        target="_blank"
                                                                        rel="noopener noreferrer"
                                                                        class="text-accent-300 hover:underline font-medium"
                                                                >
                                                                    {patent.title}
                                                                </a>
                                                        ) : (
                                                                <span class="font-medium">{patent.title}</span>
                                                        )}
                                                        <p class="text-sm text-zinc-400">
                                                            {patent.venue}{patent.year ? `, ${patent.year}` : ""}
                                                        </p>
                                                    </li>
                                            ))}
                                        </ul>
                                    </div>
                            )}

                            <!-- Profiles -->
                            {profiles?.length > 0 && (
                                    <div class="mt-10">
                                        <h3 class="text-lg font-semibold">Profiles</h3>
                                        <div class="mt-4 flex flex-wrap gap-2">
                                            {profiles.map((p) => (
                                                    <a
                                                            key={p.href}
                                                            href={p.href}
                                                            target="_blank"
                                                            rel="noopener noreferrer"
                                                            class="px-3 py-1.5 rounded-full border border-white/10 bg-[#0f131b] text-sm text-zinc-200 hover:border-accent-400/50 transition"
                                                    >
                                                        {p.label}
                                                    </a>
                                            ))}
                                        </div>
                                    </div>
                            )}

                            <!-- Attribution -->
                            <p class="mt-6 text-xs text-zinc-500">
                                Data source: BibTeX (rendered via <code>/api/pubs.json</code>). Curated for accuracy.
                            </p>
                        </div>

                    <!-- Client-side fallback: if SSR found 0, fetch and render on the client -->
                    <script>
                        (async () => {
                            const root = document.getElementById("pubs-root");
                            if (!root) return;
                            const ssrCount = Number(root.getAttribute("data-ssr-count") || "0");
                            if (ssrCount > 0) return; // SSR already rendered

                            try {
                                const res = await fetch(new URL("/api/pubs.json", window.location.origin));
                                if (!res.ok) throw new Error("Bad response");
                                const pubs = await res.json();
                                if (!Array.isArray(pubs) || pubs.length === 0) return;

                                // group by year desc
                                const grouped = pubs.reduce((acc, p) => {
                                    const y = String(p?.year ?? "Other");
                                    (acc[y] ||= []).push(p);
                                    return acc;
                                }, {});
                                const years = Object.keys(grouped).sort((a, b) => Number(b) - Number(a));

                                const chip = (t) =>
                                    `<span class="px-2 py-0.5 rounded-md bg-accent-500/10 text-accent-300 text-xs border border-accent-500/20">${t}</span>`;

                                const item = (p) => `
          <li class="rounded-xl border border-white/10 bg-[#10131a]/90 p-4 hover:border-accent-400/50 transition">
            <div class="flex flex-wrap items-baseline gap-2">
              <h4 class="font-medium">${p.title || ""}</h4>
              ${p.year ? `<span class="text-xs text-zinc-500">(${p.year})</span>` : ""}
            </div>
            ${(p.authors?.length || p.venue) ? `
              <p class="text-sm text-zinc-300 mt-1">
                ${(p.authors || []).join(", ")}${p.venue ? ` — ${p.venue}` : ""}
              </p>` : ""}
            <div class="mt-2 flex flex-wrap gap-3 text-sm">
              ${p.doi ? `<a class="underline hover:no-underline" href="https://doi.org/${p.doi}" target="_blank" rel="noopener">DOI</a>` : ""}
              ${p.url ? `<a class="underline hover:no-underline" href="${p.url}" target="_blank" rel="noopener">Link</a>` : ""}
              ${p.type ? chip(p.type) : ""}
            </div>
          </li>`;

                                const html = years.map((y) => `
          <div>
            <div class="text-sm text-zinc-400 mb-2">${y}</div>
            <ul class="space-y-3">
              ${grouped[y].map(item).join("")}
            </ul>
          </div>
        `).join("");

                                root.innerHTML = `<div class="mt-4 space-y-6">${html}</div>`;
                            } catch (e) {
                                // leave SSR message in place
                                console.warn("Client fetch for pubs failed:", e);
                            }
                        })();
                        </script>
                    </section>
