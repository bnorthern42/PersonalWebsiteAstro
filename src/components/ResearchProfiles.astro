---
import { profiles, patents } from "../data/research";
---



<!-- Patents -->
<ul class="mt-4 space-y-2">
    {patents.map((patent) => (
            <li>
                {patent.link ? (
                        <a
                                class="text-accent-400 hover:underline"
                                href={patent.link}
                                target="_blank"
                        >
                            {patent.title} â€” {patent.venue}, {patent.year}
                        </a>
                ) : (
                        <span>
          {patent.title} â€” {patent.venue}, {patent.year}
        </span>
                )}
            </li>
    ))}
</ul>
<!-- Profiles -->
<div class="mt-4 flex flex-wrap gap-2">
    {profiles.map((p) => (
            <a
                    href={p.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="px-3 py-1.5 rounded-full border border-white/10 bg-white/5 text-sm text-zinc-200 hover:border-white/20"
            >
                {p.label}
            </a>
    ))}
</div>

