---
import projects from "../data/projects";
---
<section id="projects" class="py-12 md:py-16">
    <p class="section-kicker">Portfolio Showcase</p>
    <h2 class="section-title mt-2">Featured Projects</h2>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
        {projects.map((p) => (
                <article class="card p-5 flex flex-col">
                    <div class="mb-3 aspect-video rounded-lg bg-zinc-800/50 border border-white/5">
                        <img
                                src={p.image}
                                alt={`${p.title} preview`}
                                class="mb-3 aspect-video object-cover rounded-lg border border-white/5"
                        />

                    </div>
                    <h3 class="text-lg font-semibold">{p.title}</h3>
                    <p class="text-sm text-zinc-300 mt-1 flex-1">{p.description}</p>
                    <div class="mt-3 flex flex-wrap gap-2">
                        {p.stack.map((t) => <span class="px-2 py-0.5 rounded-md bg-accent-500/10 text-accent-300 text-xs border border-accent-500/20">{t}</span>)}
                    </div>
                    <div class="mt-4 flex gap-3">
                        {p.source && <a class="text-sm underline hover:no-underline" href={p.source}>Source</a>}
                        {p.demo && <a class="text-sm underline hover:no-underline" href={p.demo}>Demo</a>}
                    </div>
                </article>
        ))}
    </div>
</section>
