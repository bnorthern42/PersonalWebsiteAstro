---
import projects from "../data/projects";
---
<section id="projects" class="section scroll-mt-24">
    <div class="container">
        <p class="text-sm uppercase tracking-wide font-medium text-accent-300/90">Portfolio Showcase</p>
        <h2 class="heading-grad text-2xl md:text-3xl font-bold mt-2">Featured Projects</h2>

        <div class="mt-6 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {projects.map((p) => (
                    <article
                            class="rounded-2xl border border-white/10 bg-[#10131a]/90 overflow-hidden transition
                 hover:-translate-y-1 hover:shadow-[0_20px_50px_rgba(0,0,0,.35)] hover:border-accent-400/50"
                    >
                        <a
                                href={p.demo || p.source || "#"}
                                target={p.demo || p.source ? "_blank" : undefined}
                                rel={p.demo || p.source ? "noopener noreferrer" : undefined}
                                class="block focus:outline-none focus-visible:ring-2 focus-visible:ring-accent-400/70"
                        >
                            <img
                                    src={p.image}
                                    alt={`${p.title} preview`}
                                    loading="lazy"
                                    class="w-full aspect-video object-cover border-b border-white/5"
                            />
                            <div class="p-4">
                                <h3 class="text-lg font-semibold">{p.title}</h3>
                                <p class="mt-1 text-sm text-zinc-300">{p.description}</p>

                                {Array.isArray(p.stack) && p.stack.length > 0 && (
                                        <div class="mt-3 flex flex-wrap gap-2">
                                            {p.stack.map((t) => (
                                                    <span class="px-2 py-0.5 rounded-md bg-accent-500/10 text-accent-300 text-xs border border-accent-500/20">
                      {t}
                    </span>
                                            ))}
                                        </div>
                                )}

                                <div class="mt-4 flex gap-3">
                                    {p.source && (
                                            <a class="text-sm underline hover:no-underline" href={p.source} target="_blank" rel="noopener noreferrer">
                                                Source
                                            </a>
                                    )}
                                    {p.demo && (
                                            <a class="text-sm underline hover:no-underline" href={p.demo} target="_blank" rel="noopener noreferrer">
                                                Demo
                                            </a>
                                    )}
                                </div>
                            </div>
                        </a>
                    </article>
            ))}
        </div>
    </div>
</section>
